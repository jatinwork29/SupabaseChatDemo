<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/header_backgrounds"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/sf_pro_text"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sender_background"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/sf_pro_text"
            android:maxEms="12"
            android:paddingTop="3dp"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_send_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:includeFontPadding="false"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sf_pro_text"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/time_color"
            android:textFontWeight="400"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/receiver_background"
        android:backgroundTint="@color/blue"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/sf_pro_text"
            android:maxEms="12"
            android:includeFontPadding="false"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_receive_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:includeFontPadding="false"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sf_pro_text"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/white_bg"
            android:textFontWeight="400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</RelativeLayout>